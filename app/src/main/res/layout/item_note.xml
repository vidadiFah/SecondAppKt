<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_marginBottom="12dp"
    android:layout_marginStart="12dp"
    android:orientation="vertical">

    <ImageView
        android:id="@+id/iv_note_bg"
        android:layout_width="0dp"
        android:layout_height="0dp"
        android:src="@drawable/rounded_bg"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintBottom_toBottomOf="parent"
        app:tint="@color/yellow_note" />

    <TextView
        android:id="@+id/tv_title"
        android:textSize="22sp"
        android:textStyle="bold"
        android:textColor="@color/black"
        android:layout_marginStart="14dp"
        android:layout_marginTop="10dp"
        android:maxLines="1"
        android:singleLine="true"
        android:ellipsize="end"
        app:layout_constraintTop_toTopOf="@id/iv_note_bg"
        app:layout_constraintStart_toStartOf="@id/iv_note_bg"
        android:layout_width="match_parent"
        android:layout_marginEnd="10dp"
        android:layout_height="wrap_content"
        android:text="Title" />

    <TextView
        android:id="@+id/tv_desc"
        android:textSize="20sp"
        android:textColor="@color/black"
        android:maxLines="4"
        android:ellipsize="end"
        app:layout_constraintTop_toBottomOf="@id/tv_title"
        android:layout_width="match_parent"
        android:layout_marginStart="14dp"
        android:layout_marginEnd="10dp"
        android:layout_height="wrap_content"
        android:text="Desc" />

    <TextView
        android:id="@+id/tv_date"
        android:textSize="12sp"
        android:textStyle="bold"
        android:textColor="@color/black"
        app:layout_constraintStart_toStartOf="@id/tv_desc"
        app:layout_constraintBottom_toBottomOf="@id/iv_note_bg"
        app:layout_constraintTop_toBottomOf="@id/tv_desc"
        android:layout_marginBottom="10dp"
        android:layout_marginTop="10dp"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        tools:text="31 May 12:45" />




</androidx.constraintlayout.widget.ConstraintLayout>