<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:app="http://schemas.android.com/apk/res-auto">

    <TextView
        android:id="@+id/tvName"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintBottom_toBottomOf="@+id/thinLine"
        android:layout_marginStart="26dp"
        tools:text="BMW 5 series"
        android:textStyle="bold"
        android:textColor="@color/blue"/>

    <TextView
        android:id="@+id/dollar"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintBottom_toBottomOf="@id/thinLine"
        app:layout_constraintEnd_toStartOf="@id/tvPrice"
        android:textColor="@color/gray_dark"
        android:textStyle="bold"
        android:text="$"/>

    <TextView
        android:id="@+id/tvPrice"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintBottom_toBottomOf="@id/thinLine"
        app:layout_constraintEnd_toStartOf="@id/tvDay"
        android:textColor="@color/gray_dark"
        android:textStyle="bold"
        tools:text="70"/>

    <TextView
        android:id="@+id/tvDay"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintBottom_toBottomOf="@id/thinLine"
        app:layout_constraintEnd_toEndOf="parent"
        android:layout_marginEnd="26dp"
        android:textColor="@color/gray_dark"
        android:textStyle="bold"
        android:text="/day"/>

    <View
        android:id="@+id/thinLine"
        android:layout_width="match_parent"
        android:layout_height="0.7dp"
        android:background="@color/gray"
        android:layout_marginHorizontal="20dp"
        app:layout_constraintTop_toTopOf="parent"
        android:layout_marginTop="46dp"/>

    <View
        android:id="@+id/boldLine"
        android:layout_width="match_parent"
        android:layout_height="8dp"
        android:background="@color/gray"
        app:layout_constraintTop_toTopOf="parent"
        android:layout_marginTop="190dp"/>

    <ImageView
        android:id="@+id/ivCar"
        android:layout_width="0dp"
        android:layout_height="0dp"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toStartOf="@id/carIcon"
        app:layout_constraintBottom_toBottomOf="@id/boldLine"
        app:layout_constraintTop_toTopOf="@id/thinLine"/>


    <ImageView
        android:id="@+id/carIcon"
        android:layout_width="40dp"
        android:layout_height="40dp"
        android:src="@drawable/ic_car_icon"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toTopOf="@id/thinLine"
        android:layout_marginStart="80dp"
        android:layout_marginTop="16dp"/>

    <TextView
        android:id="@+id/tvShape"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        tools:text="Sedan"
        android:textSize="16dp"
        android:textColor="@color/black"
        app:layout_constraintStart_toEndOf="@id/carIcon"
        app:layout_constraintTop_toTopOf="@id/carIcon"
        app:layout_constraintBottom_toBottomOf="@id/carIcon"/>

    <ImageView
        android:id="@+id/gearIcon"
        android:layout_width="40dp"
        android:layout_height="40dp"
        android:src="@drawable/ic_transmission_icon"
        app:layout_constraintStart_toStartOf="@id/carIcon"
        app:layout_constraintTop_toBottomOf="@id/carIcon"
        android:layout_marginTop="-4dp"/>

    <TextView
        android:id="@+id/tvTransmission"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        tools:text="Automatic"
        android:textSize="16dp"
        android:textColor="@color/black"
        app:layout_constraintStart_toEndOf="@id/gearIcon"
        app:layout_constraintTop_toTopOf="@id/gearIcon"
        app:layout_constraintBottom_toBottomOf="@id/gearIcon"/>

    <ImageView
        android:id="@+id/snowIcon"
        android:layout_width="40dp"
        android:layout_height="40dp"
        android:src="@drawable/ic_snow_icon"
        app:layout_constraintStart_toStartOf="@id/gearIcon"
        app:layout_constraintTop_toBottomOf="@id/gearIcon"
        android:layout_marginTop="-4dp"/>

    <TextView
        android:id="@+id/tvConditioner"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        tools:text="Yes"
        android:textSize="16dp"
        android:textColor="@color/black"
        app:layout_constraintStart_toEndOf="@id/snowIcon"
        app:layout_constraintTop_toTopOf="@id/snowIcon"
        app:layout_constraintBottom_toBottomOf="@id/snowIcon"/>

</androidx.constraintlayout.widget.ConstraintLayout>