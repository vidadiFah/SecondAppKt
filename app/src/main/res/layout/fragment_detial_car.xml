<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    tools:context=".ui.detail.DetailCarFragment">

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:paddingBottom="20dp"
        android:clipToPadding="false">

        <androidx.constraintlayout.widget.ConstraintLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Details"
                android:id="@+id/tv_description"
                android:textSize="20sp"
                android:textStyle="bold"
                android:layout_marginTop="10dp"
                app:layout_constraintTop_toTopOf="parent"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintEnd_toEndOf="parent"/>

            <View
                android:id="@+id/det_line"
                android:layout_width="match_parent"
                app:layout_constraintTop_toBottomOf="@id/tv_description"
                android:layout_height="1dp"
                android:layout_marginTop="10dp"
                android:background="@color/gray"/>

            <ImageView
                android:id="@+id/iv_car"
                android:layout_width="0dp"
                android:layout_height="260dp"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintTop_toBottomOf="@id/det_line"/>

            <View
                android:id="@+id/det_thin_line"
                android:layout_width="match_parent"
                android:layout_height="0.7dp"
                android:background="@color/gray"
                android:layout_marginHorizontal="20dp"
                android:layout_marginBottom="220dp"
                app:layout_constraintTop_toBottomOf="@id/iv_car"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintEnd_toEndOf="parent"/>

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                tools:text="Title"
                android:textColor="@color/blue"
                android:id="@+id/tv_title"
                android:textSize="24sp"
                android:textStyle="bold"
                app:layout_constraintTop_toBottomOf="@id/det_thin_line"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintEnd_toEndOf="parent"
                android:layout_marginTop="16dp"/>

            <ImageView
                android:layout_width="54dp"
                android:layout_height="54dp"
                android:src="@drawable/ic_car_icon"
                android:id="@+id/det_car_icon"
                app:layout_constraintStart_toStartOf="parent"
                android:layout_marginStart="20dp"
                app:layout_constraintTop_toBottomOf="@id/tv_title"
                android:layout_marginTop="20dp"/>


            <TextView
                android:id="@+id/tv_shape"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                tools:text="Hatchback"
                android:textSize="20sp"
                app:layout_constraintTop_toTopOf="@id/det_car_icon"
                app:layout_constraintBottom_toBottomOf="@id/det_car_icon"
                app:layout_constraintStart_toEndOf="@id/det_car_icon"
                android:layout_marginBottom="4dp"/>

            <ImageView
                android:layout_width="54dp"
                android:layout_height="54dp"
                android:src="@drawable/ic_transmission_icon"
                android:id="@+id/det_transmission_icon"
                app:layout_constraintStart_toStartOf="@id/det_car_icon"
                app:layout_constraintTop_toBottomOf="@id/det_car_icon"
                android:layout_marginTop="-10dp"/>


            <TextView
                android:id="@+id/tv_transmission"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                tools:text="Manual"
                android:textSize="20sp"
                app:layout_constraintTop_toTopOf="@id/det_transmission_icon"
                app:layout_constraintBottom_toBottomOf="@id/det_transmission_icon"
                app:layout_constraintStart_toEndOf="@id/det_transmission_icon" />

            <ImageView
                android:layout_width="54dp"
                android:layout_height="54dp"
                android:src="@drawable/ic_snow_icon"
                android:id="@+id/det_snow_icon"
                app:layout_constraintStart_toStartOf="@id/det_car_icon"
                app:layout_constraintTop_toBottomOf="@id/det_transmission_icon"
                android:layout_marginTop="-6dp"/>


            <TextView
                android:id="@+id/tv_snow"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                tools:text="Yes"
                android:textSize="20sp"
                app:layout_constraintTop_toTopOf="@id/det_snow_icon"
                app:layout_constraintBottom_toBottomOf="@id/det_snow_icon"
                app:layout_constraintStart_toEndOf="@id/det_snow_icon" />


            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:id="@+id/tv_price"
                android:text="Price:"
                android:textSize="24sp"
                android:textStyle="bold"
                android:textColor="@color/blue"
                app:layout_constraintStart_toStartOf="@id/tv_description"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintTop_toTopOf="@id/tv_shape"
                app:layout_constraintBottom_toBottomOf="@id/tv_shape"/>

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="$"
                android:id="@+id/tv_dollar"
                android:textStyle="bold"
                android:textSize="20sp"
                android:textColor="@color/gray_dark"
                android:layout_marginTop="2dp"
                app:layout_constraintStart_toStartOf="@id/tv_price"
                app:layout_constraintTop_toBottomOf="@id/tv_price"/>

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:id="@+id/tv_price_int"
                app:layout_constraintStart_toEndOf="@id/tv_dollar"
                app:layout_constraintTop_toTopOf="@id/tv_dollar"
                app:layout_constraintBottom_toBottomOf="@id/tv_dollar"
                tools:text="160"
                android:textSize="20sp"
                android:textStyle="bold"
                android:textColor="@color/gray_dark"/>

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:id="@+id/tv_day"
                app:layout_constraintStart_toEndOf="@id/tv_price_int"
                app:layout_constraintTop_toTopOf="@id/tv_dollar"
                app:layout_constraintBottom_toBottomOf="@id/tv_dollar"
                android:text="/day"
                android:textSize="20sp"
                android:textStyle="bold"
                android:textColor="@color/gray_dark"/>

            <com.google.android.material.button.MaterialButton
                android:layout_width="match_parent"
                android:layout_height="52dp"
                app:cornerRadius="10dp"
                android:text="Reserve"
                android:textSize="20sp"
                android:backgroundTint="@color/blue"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintTop_toBottomOf="@id/det_snow_icon"
                android:layout_marginTop="20dp"
                android:layout_marginHorizontal="100dp" />

        </androidx.constraintlayout.widget.ConstraintLayout>

    </ScrollView>


</androidx.constraintlayout.widget.ConstraintLayout>