<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:background="@color/bg_gray">

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Notes"
        android:id="@+id/tv_notes_reg"
        android:textSize="28sp"
        android:textStyle="bold"
        android:layout_marginTop="80dp"
        android:textColor="@color/white"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toTopOf="parent"/>

    <ImageView
        android:layout_width="180dp"
        android:layout_height="180dp"
        android:id="@+id/iv_note_icon"
        android:src="@drawable/ic_note_icon"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintBottom_toBottomOf="parent"
        android:layout_marginBottom="30dp"/>

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/tv_auth"
        android:text="Авторизация"
        android:textSize="20sp"
        android:textColor="@color/white"
        app:layout_constraintTop_toBottomOf="@id/iv_note_icon"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        android:layout_marginTop="30dp"/>

    <View
        android:layout_width="170dp"
        android:layout_height="42dp"
        android:id="@+id/btn_auth"
        android:background="@drawable/big_rounded_bg"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toBottomOf="@id/tv_auth"
        android:backgroundTint="@color/white"
        app:layout_constraintBottom_toBottomOf="parent"/>

    <ImageView
        android:layout_width="22dp"
        android:layout_height="22dp"
        android:src="@drawable/ic_google_logo"
        app:layout_constraintStart_toStartOf="@id/btn_auth"
        app:layout_constraintTop_toTopOf="@id/btn_auth"
        app:layout_constraintBottom_toBottomOf="@id/btn_auth"
        android:layout_marginStart="10dp"/>

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Sign in with Google"
        android:textSize="14sp"
        android:textStyle="bold"
        android:layout_marginEnd="10dp"
        android:textColor="@color/black"
        app:layout_constraintTop_toTopOf="@id/btn_auth"
        app:layout_constraintBottom_toBottomOf="@id/btn_auth"
        app:layout_constraintEnd_toEndOf="@id/btn_auth"/>


</androidx.constraintlayout.widget.ConstraintLayout>